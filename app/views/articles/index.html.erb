<% @page_title = "ニュース記事時一覧" %>
<h1><%= @page_title %></h1>

<% if @articles.present? %>
    <% @articles.each do |article| %>
      <h2><%= link_to(article.title, article) %></h2>
      <p>
        <%= article.body.truncate(80) %>
        <%= link_to("もっと読む", article)%>
      </p>
      <div class = "article-footer">
        <%= article.released_at.strftime("%Y/%m/%d %H:%M")%>
      </div>
    <% end %>
  <%= paginate @articles %>
<% else %>
  <p>ニュースはありません</p>
<% end %>
